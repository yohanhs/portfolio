    <div class="w-full lg:w-1/2 p-6">
        <ol class="relative border-s-2 border-gray-200 dark:border-gray-700">
            {EXPERIENCE.map((exp, i) => (
                    <li class="  mb-10 md:ms-10 ms-8">
        <span class="absolute flex items-center justify-center size-8 md:size-10 bg-blue-100 rounded-full -start-5 ring-8 ring-gray-50 dark:ring-gray-800 dark:bg-white">
            <svg class="size-4 md:size-5 text-baseColor-500 dark:text-baseColor-500" aria-hidden="true"
                 xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
